<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
      <RelativeLayout
            android:id="@+id/layout_userInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <!-- 用户图像 -->

            <!-- 左边圆角图片 -->
        <FrameLayout
            android:layout_width="58dip"
            android:layout_height="58dip"
            android:layout_marginLeft="10dp"
            android:id="@+id/left"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp" >

            <ImageView 
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_leftlogo"
           
            />
            <View
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/content_bg" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/content_bg_shape" />
        </FrameLayout>

            <!-- 图像右边 -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/left" 
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                >

                <!-- 时间 -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toLeftOf="@+id/sendTime" >

                    <!-- 用户昵称 -->

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="true"
                        android:text="逼急的兔子会咬人"
                        android:textColor="#27408B" />
                    <!-- 用户年龄 -->

                    <TextView
                        android:id="@+id/tvAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/userName"
                        android:layout_marginTop="3dp"
                        android:text="22" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/sendTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="15dp"
                    android:text="08-03 12:00"
                    android:textColor="@color/nomalGray"
                    android:textSize="12sp" />

            </RelativeLayout>
        </RelativeLayout>

</LinearLayout>
